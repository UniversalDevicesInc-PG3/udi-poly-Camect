<nodeDefs>
    <!-- NODE DEF from 5.0 document http://wiki.universal-devices.com/index.php?title=V50_MAIN -->
    <!-- controller, this must mach the id in your Controller class-->
    <nodeDef id="controller" nls="ctl">
        <editors />
        <sts>
			<st id="ST" editor="bool" />
      <st id="GV1" editor="I_DEBUG" />
		</sts>
        <cmds>
            <sends>
              <!-- These are for our heartbeat -->
              <cmd id="DON" />
              <cmd id="DOF" />
            </sends>
            <accepts>
              <cmd id="SET_DM">
                <p id="" editor="I_DEBUG" init="GV1" />
              </cmd>
              <cmd id="QUERY" />
              <cmd id="DISCOVER" />
              <cmd id="UPDATE_PROFILE" />
            </accepts>
        </cmds>
    </nodeDef>
	<!-- templatenodeid -->
    <nodeDef id="camera" nls="camera">
        <editors />
        <sts>
            <st id="ST" editor="bool" /> <!-- Camera Enabled -->
            <st id="GV0" editor="bool" /> <!-- Alerts Enabled -->
            <st id="GV1" editor="bool" /> <!-- Streaming Enabled -->
        </sts>
        <cmds>
            <sends />
            <accepts>
                <cmd id="DON" />
                <cmd id="DOF" />
            </accepts>
        </cmds>
    </nodeDef>
</nodeDefs>
